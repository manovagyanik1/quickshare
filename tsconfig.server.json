{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist/server",
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true
  },
  "include": ["server/**/*", "api/**/*"],
  "exclude": ["node_modules"]
}